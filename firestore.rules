
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if the user is signed in.
    // In our single-user model, this means they've entered the correct password
    // and the client has completed an anonymous sign-in.
    function isSignedIn() {
      return request.auth != null;
    }

    // Allow read/write access to all collections if the user is signed in.
    // This is secure because the app itself is protected by the global password,
    // and only authenticated clients (via anonymous sign-in) can make requests.
    match /{document=**} {
      allow read, write: if isSignedIn();
    }
  }
}
